<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="0.0" xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsiigui.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="325.0">
        <children>
            <Button fx:id="MainColor" layoutX="62.0" layoutY="5.0" prefHeight="33.0" prefWidth="183.0" visible="false"/>
            <Button fx:id="Start" layoutX="127.0" layoutY="250.0" onAction="#onHelloButtonClick" text="Start"/>
            <Label fx:id="instructions" layoutX="127.0" layoutY="100" text="Click the matching color to earn points!"/>
            <Button fx:id="color1" layoutX="43.0" layoutY="73.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color2" layoutX="43.0" layoutY="133.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color3" layoutX="208.0" layoutY="73.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color4" layoutX="208.0" layoutY="133.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color5" layoutX="43.0" layoutY="73.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color6" layoutX="43.0" layoutY="133.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color7" layoutX="208.0" layoutY="73.0" mnemonicParsing="false" visible="false"/>
            <Button fx:id="color8" layoutX="208.0" layoutY="133.0" mnemonicParsing="false" visible="false"/>
            <Label fx:id="scoreLabel" layoutX="264.0" layoutY="22.0" text="Score" visible="false"/>
            <ImageView fx:id="correctImg" layoutX="16" layoutY="300" fitWidth="100" fitHeight="100" preserveRatio="true"
                       visible="false">
                <Image url="@yay.jpg"/>
            </ImageView>
            <ImageView fx:id="wrongImg" layoutX="16" layoutY="300" fitWidth="100" fitHeight="100" preserveRatio="true"
                       visible="false">
                <Image url="@sad.jpg"/>
            </ImageView>


        </children>
    </AnchorPane>
</VBox>
